<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <record id="rule_knowledge_article_token_system" model="ir.rule">
        <field name="name">Articles: System = CRUD on all tokens</field>
        <field name="model_id" ref="model_knowledge_article_token"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="rule_knowledge_article_token_users_read" model="ir.rule">
        <field name="name">Articles: users/portal: write based on flag</field>
        <field name="model_id" ref="model_knowledge_article_token"/>
        <field name="domain_force">[('article_id.user_has_access', '=', True)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('base.group_portal'))]"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
