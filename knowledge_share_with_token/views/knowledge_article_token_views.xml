<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="knowledge_article_view_form" model="ir.ui.view">
        <field name="model">knowledge.article</field>
        <field name="inherit_id" ref="knowledge.knowledge_article_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('dropdown-divider')]" position="before">
                <div class="d-flex px-3"
                    t-on-click="ev => ev.currentTarget.querySelector('.o_knowledge_share_toggle input')?.click()">
                    <div
                        class="o_knowledge_share_panel_icon align-self-center d-flex justify-content-center align-items-center flex-shrink-0">
                        <i class="fa fa-globe fa-2x" title="Share to web" />
                    </div>
                    <div class="flex-grow-1 px-3">
                        <div class="lead">Article published with token</div>
                        <div>Anyone can view using token</div>
                    </div>
                    <div class="o_knowledge_share_toggle align-self-center pe-0"
                        attrs="{'invisible': [('user_can_write', '=', False)]}">
                        <button type="object"
                            name="action_open_manage_share_token"
                            class="input-group d-flex flex-grow-1 min-w-0 p-0 ms-3">
                            <button class="btn btn-primary"
                                attrs="{'invisible': [('share_with_token_count', '!=', 0)]}">Manage</button>
                            <button class="btn btn-primary"
                                attrs="{'invisible': [('share_with_token_count', '=', 0)]}">Manage <span>
                                (<field name="share_with_token_count" />)</span></button>
                        </button>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
