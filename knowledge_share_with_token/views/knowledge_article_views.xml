<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_knowledge_article_token_form" model="ir.ui.view">
        <field name="name">knowledge.article.token.form</field>
        <field name="model">knowledge.article.token</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="article_id" />
                        <field name="access_token" />
                        <field name="token_article_url" widget="CopyClipboardChar" />
                        <field name="partner_id" options="{'no_create': True}" />
                        <field name="root_article" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_knowledge_article_token_tree" model="ir.ui.view">
        <field name="name">knowledge.article.token.tree</field>
        <field name="model">knowledge.article.token</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="article_id" />
                <field name="token_article_url" widget="CopyClipboardChar" />
                <field name="partner_id" options="{'no_create': True}" />
            </tree>
        </field>
    </record>

    <record id="view_knowledge_article_token_search" model="ir.ui.view">
        <field name="name">knowledge.article.token.search</field>
        <field name="model">knowledge.article.token</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="article_id" />
                <field name="access_token" />
                <field name="partner_id" />
                <filter string="Root Article" name="filter_root_article"
                    domain="[('root_article', '=', True)]" />
                <group expand="0" string="Group By">
                    <filter string="Partner" name="groupby_partner_id"
                        context="{'group_by':'partner_id'}" />
                    <filter string="Token" name="groupby_access_token"
                        context="{'group_by':'access_token'}" />
                    <filter string="Create Date" name="groupby_create_date"
                        context="{'group_by':'create_date'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_knowledge_article_token" model="ir.actions.act_window">
        <field name="name">Articles Shared Tokens</field>
        <field name="res_model">knowledge.article.token</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_knowledge_article_token"
        name="Articles Shared Tokens"
        action="action_knowledge_article_token"
        parent="knowledge.knowledge_menu_configuration"
        sequence="10" />

</odoo>
