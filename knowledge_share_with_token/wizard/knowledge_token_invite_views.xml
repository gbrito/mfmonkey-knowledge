<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_knowledge_token_invite_form" model="ir.ui.view">
        <field name="name">knowledge.token.invite.form</field>
        <field name="model">knowledge.token.invite</field>
        <field name="arch" type="xml">
            <form class="py-0">
                <field name="article_id" invisible="1" />
                <div class="alert alert-info text-center" role="alert"
                    attrs="{'invisible': [('root_article', '=', False)]}">
                    All child articles will be shared with the same token.
                </div>
                <sheet>
                    <group>
                        <field name="name" class="w-100" />
                        <field name="access_token" class="w-100" invisible="1" />
                        <field name="token_article_url" widget="CopyClipboardChar" class="w-100" />
                        <field name="partner_id" class="w-100" />
                        <field name="root_article" widget="boolean_toggle" class="w-100" />
                    </group>
                    <notebook>
                        <page string="Token Articles">
                            <field name="token_article_ids" nolabel="1">
                                <tree>
                                    <field name="article_id" invisible="1" />
                                    <field name="name" />
                                    <field name="access_token" invisible="1" />
                                    <field name="token_article_url" widget="CopyClipboardChar" />
                                    <field name="partner_id" />
                                    <button name="action_delete_token" string="Delete" type="object"
                                        class="btn-secondary" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Save" type="object" name="action_save_token"
                        class="btn-primary" />
                    <button string="Cancel" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_knowledge_token_invite" model="ir.actions.act_window">
        <field name="name">Knowledge Token Invite</field>
        <field name="res_model">knowledge.token.invite</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
